# Gemini API Configuration
# Copy this to .env.local and fill in your credentials

# Google Cloud / Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Image Provider Selection (gemini or openai)
IMAGE_PROVIDER=gemini

# Gemini Model Settings
GEMINI_VISION_MODEL=gemini-1.5-pro
GEMINI_GENERATION_MODEL=imagen-3

# Optional: Service Account for Google Cloud (if not using API key)
# GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# Rate Limiting
GEMINI_MAX_REQUESTS_PER_MINUTE=60
GEMINI_MAX_CONCURRENT_REQUESTS=5

# Quality Settings
GEMINI_IMAGE_QUALITY=hd
GEMINI_DEFAULT_ASPECT_RATIO=16:9

# Safety Settings
GEMINI_SAFETY_LEVEL=medium  # low, medium, high

# Cost Control
GEMINI_MONTHLY_BUDGET_USD=50
GEMINI_ALERT_AT_PERCENTAGE=80